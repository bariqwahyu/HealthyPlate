<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#006837"
    tools:context=".ui.welcome.WelcomeActivity">

    <TextView
        android:id="@+id/txt_welcome"
        android:layout_width="322dp"
        android:layout_height="48dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="41dp"
        android:fontFamily="@font/fredella"
        android:text="Welcome to"
        android:textAlignment="center"
        android:textColor="#F7C81E"
        android:textSize="55sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_welcome"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="64dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="@+id/txt_welcome"
        app:layout_constraintStart_toStartOf="@+id/txt_welcome"
        app:layout_constraintTop_toBottomOf="@+id/txt_welcome"
        app:srcCompat="@drawable/healthyplate_logo" />

    <Button
        android:id="@+id/btn_welcomeLogin"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="@color/green1"
        android:fontFamily="@font/fredella"
        android:text="@string/login"
        android:textAllCaps="false"
        android:textSize="30sp"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="@+id/img_welcome"
        app:layout_constraintStart_toStartOf="@+id/img_welcome"
        app:layout_constraintTop_toBottomOf="@+id/img_welcome" />

    <Button
        android:id="@+id/btn_welcomeReg"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/green1"
        android:fontFamily="@font/fredella"
        android:text="@string/register"
        android:textAllCaps="false"
        android:textSize="30sp"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_welcomeLogin"
        app:layout_constraintStart_toStartOf="@+id/btn_welcomeLogin"
        app:layout_constraintTop_toBottomOf="@+id/btn_welcomeLogin" />
</androidx.constraintlayout.widget.ConstraintLayout>